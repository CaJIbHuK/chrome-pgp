{
  "manifest_version": 2,

  "name": "Easy OTG PGP",
  "description": "Extension for easy encrypting messages using PGP",
  "version": "1.0",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "default_title": "Easy OTG PGP"
  },

  "permissions": [
    "management",
    "contextMenus",
    "storage",
    "tabs",
    "activeTab", "http://*/",
    "https://*/"
  ],

  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },

  "background": {
    "scripts": ["js/openpgp.min.js",
      "js/openpgp.worker.min.js", "js/background.js"
    ],
    "persistent": false
  },

  "content_scripts": [{
    "all_frames": true,
    "matches": ["<all_urls>"],
    "js": ["js/jquery-2.2.2.min.js",
      "js/selection.js"
    ],
    "css": ["css/dialog.css"],
    "run_at": "document_idle"
  }],

  "sandbox": {
    "pages": ["options.html"]
  },

  "options_page": "options.html"
}
